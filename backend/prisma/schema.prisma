// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Assuming you're using PostgreSQL. Modify this based on your DB.
  url      = env("DATABASE_URL")
}

model User {
  id            Int        @id @default(autoincrement())
  name          String
  email         String     @unique
  password      String
  avatarId      Int?       @unique
  avatar        Image?     
  block         Int[]      @default([])
  statusMessage String?
  lastSeen      DateTime?
  messages      Message[]
  chats         UserChat[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@map("users")
}

model Chat {
  id            Int          @id @default(autoincrement())
  chatType      ChatType     @default(private) // Enum field for chat type
  groupName     String?
  groupAvatarId Int?         @unique
  groupAvatar   Image?       
  createdBy     Int
  lastMessage   String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  messages      Message[]
  participants  UserChat[]

  @@map("chats")
}

model UserChat {
  id            Int        @id @default(autoincrement())
  userId        Int
  chatId        Int
  user          User       @relation(fields: [userId], references: [id])
  chat          Chat       @relation(fields: [chatId], references: [id])


  isSeen        Boolean     @default(false)
  role          ChatRole    @default(member)
  mutedUntil    DateTime?
  pinned        Boolean     @default(false)
  updatedAt     DateTime    @default(now())

  @@unique([userId, chatId])
  @@map("user_chats")
}

model Message {
  id            Int        @id @default(autoincrement())
  chatId        Int
  senderId      Int
  chat          Chat       @relation(fields: [chatId], references: [id])
  sender        User       @relation(fields: [senderId], references: [id])
  type          MessageType   @default(normal)
  content       String?
  imageId       Int?       @unique
  image         Image?     
  isEdited      Boolean     @default(false)
  replyToId     Int?
  deletedAt     DateTime?
  createdAt     DateTime    @default(now())

  @@map("messages")
}

model Image {
  id        Int       @id @default(autoincrement())
  url       String
  key       String
  userId    Int?      @unique
  user      User?     @relation(fields: [userId], references: [id])
  messageId Int?      @unique
  message   Message?  @relation(fields: [messageId], references: [id])
  chatId    Int?      @unique
  chat      Chat?     @relation(fields: [chatId], references: [id])
  createdAt DateTime  @default(now())


  @@map("images")
}

enum ChatType {
  private
  group
}

enum ChatRole {
  admin
  member
}

enum MessageType {
  normal
  system
}



